<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BetterThanYesterday" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_refresh_small</item>
    </style>
    <!--
    Having themes.xml for v31 variant because @android:dimen/system_app_widget_background_radius
     and @android:dimen/system_app_widget_internal_padding requires API level 31
    -->
    <style name="Theme.BetterThanYesterday.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
    </style>
</resources>